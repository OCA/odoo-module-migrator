<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_simple_form" model="ir.ui.view">
        <field name="name">res.partner.simplified.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <field name="zip" position="after">
                <field name="test_field_1"/>
                <field name="task_ids" editable="bottom">
                    <tree editable="bottom" delete="false">
                        <field name="id"/>
                        <field name="name"/>
                        <field name="active" widget="boolean_toggle" string="Still Active"/>
                        <button name="get_formview_action" type="object" title="Open Task" icon="fa-pencil-square-o"/>
                    </tree>
                </field>
                <field name="test_field_2" invisible="False # could not parse ['faulty domain']" required="not (((a or b == 42) and c == 43))" readonly="a == 1 and (b == 2 or c == 3) and d == 4"/>
            </field>
            <field name="zip" position="attributes">
                <attribute name="required">a == 1</attribute></field>
        </field>
    </record>
</odoo>
